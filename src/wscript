def build(bld):
	lib_sources = bld.path.ant_glob("**/*.cc")
	bld.shlib(
		source = lib_sources,
		name = 'libzbs_shared',
		target = 'zbs',
		includes = '.. .',
	)
	bld.stlib(
		source = lib_sources,
		name = 'libzbs_static',
		target = 'zbs',
		includes = '.. .',
	)
	bld.install_files(
		'${PREFIX}/include',
		bld.path.ant_glob("zbs/**/*.hh") + [bld.path.find_node("zbs.hh")],
		relative_trick=True
	)
